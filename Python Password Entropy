#!/usr/bin/python3
# password-entropy.py

import math

print("Password Entropy Calculation Program")
print("-------------------------------------")

# Obtain password input from the user
password = input("Enter a password to calculate its entropy: ")

# Calculate the length of the password
length = len(password)

# Determine the pool size based on the characters used in the password
character_sets = "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!@#$%^&*()-_=+[]{}|;:'\",.<>?/`~"
pool_size = len(character_sets)

# Calculate the entropy
entropy = length * math.log2(pool_size)

# Print the password and its entropy (string and float types)
print("\nThe password is: {}".format(password))
print("The entropy of the password is: {:.2f} bits".format(entropy))

# Print different data types
unique_characters = len(set(password))   # Unique characters in the password

print("\nAdditional Information:")
print("Password length (integer):", length)
print("Unique characters in password (integer):", unique_characters)
print("Entropy (float):", entropy)
