#!bin/bash
# variables.sh

# Cybersecurity Incident Response Script

# Simulate gathering information about suspicious IP address
suspicious_ip="192.168.1.100"
severity=High
description='Unusual outbound traffic detected'

# Print the gathered information
echo "Cybersecurity Incident Report:"
echo "---------------------------------"
echo "Severity: $severity"
echo "Description: $description"
echo "Suspicious IP Address: $suspicious_ip"
echo "---------------------------------"

# Print the gathered information using curly braces
echo "Cybersecurity Incident Report:"
echo "---------------------------------"
echo "Severity: ${severity}"
echo "Description: ${description}"
echo "Suspicious IP Address: ${suspicious_ip}"
echo "---------------------------------"
 
